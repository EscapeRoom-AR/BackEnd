<database name="default" defaultIdMethod="native"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd"
          namespace="API\Model">

  <table name="user">
    <column name="created" type="TIMESTAMP" />
    <column name="deleted" type="TIMESTAMP" />
    <column name="code" type="integer" primaryKey="true" autoIncrement="true" required="true"/>
    <column name="username" type="varchar" size="255" unique="true"/>
    <column name="email" type="varchar" size="255" />
    <column name="premium" type="boolean" />
    <column name="image" type="varchar" size="255" />
    <column name="description" type="varchar" size="255" />  
    <unique>
      <unique-column name="username" />
      <unique-column name="email" />
    </unique>
  </table>

  <table name="room">
    <column name="code" type="integer" primaryKey="true" autoIncrement="true" required="true"/>
    <column name="name" type="varchar" size="255" />
    <column name="premium" type="boolean" />
  </table>

  <table name="game">
    <column name="created" type="TIMESTAMP" />
    <column name="deleted" type="TIMESTAMP" />
    <column name="code" type="integer"  primaryKey="true" autoIncrement="true" required="true"/>
    <column name="hints_used" type="integer" />
    <column name="time" type="integer" />
    <column name="user_code" type="integer" />
    <column name="room_code" type="integer" />
    <foreign-key foreignTable="user">
      <reference local="user_code" foreign="code"/>
    </foreign-key>
    <foreign-key foreignTable="room">
      <reference local="room_code" foreign="code"/>
    </foreign-key>
  </table>

  <table name="item">
    <column name="code" type="integer" primaryKey="true" autoIncrement="true" required="true"/>
    <column name="name" type="varchar" size="255" />
    <column name="qr_code" type="varchar" size="255" />
    <column name="room_code" type="integer" />
    <foreign-key foreignTable="room">
      <reference local="room_code" foreign="code" />
    </foreign-key>
  </table>

  <table name="hint">
    <column name="hint" type="varchar" size="255" />
    <column name="item_code" type="integer" />
    <foreign-key foreignTable="item">
      <reference local="item_code" foreign="code" />
    </foreign-key>
  </table>

</database>
